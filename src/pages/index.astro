---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Welcome to Astro.">
	<Button text="Aceptar">
		<svg
			slot="pre"
			xmlns="http://www.w3.org/2000/svg"
			x="0px"
			y="0px"
			width="15"
			height="15"
			viewBox="0 0 16 16"
		>
			<rect width="10" height="3" x="3" fill="#6a2eff"></rect><rect
				width="12"
				height="12"
				x="2"
				y="3"
				fill="#9d70ff"></rect><rect
				width="14"
				height="2"
				x="1"
				y="2"
				fill="#6a2eff"></rect><rect
				width="2"
				height="5"
				x="10"
				y="7"
				fill="#6a2eff"></rect><rect
				width="2"
				height="5"
				x="4"
				y="7"
				fill="#6a2eff"></rect>
		</svg>
	</Button>

	<Button isRed>
		<div slot="pos">
			<svg
				class=" size-4 inline-block"
				xmlns="http://www.w3.org/2000/svg"
				x="0px"
				y="0px"
				width="15"
				height="15"
				viewBox="0 0 16 16"
			>
				<polygon fill="#6a2eff" points="12,4 10,1 6,1 4,4"
				></polygon><polygon
					fill="#9d70ff"
					points="13,15 3,15 1.5,4 14.5,4"></polygon><rect
					width="14"
					height="2"
					x="1"
					y="2"
					fill="#6a2eff"></rect>
			</svg>
			Warning
		</div>
	</Button>
</Layout>
